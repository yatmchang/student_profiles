<h1>Edit Your Info</h1>
<% if can? :manage, @user %>
<%= simple_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :current_password %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, class: "btn btn-default" %>
<% end %>
<% end %>
